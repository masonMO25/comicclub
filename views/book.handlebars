<section class="book">
  <img src="/images/{{book.filename}}" alt="{{book.description}}">
  <div class="book-details">
    <h3>{{book.title}}</h3>
    <p>By: {{book.author}}</p>
  </div>
</section>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{/if}}


{{> comments book.comments}}

{{#if loggedIn}}
<script type="text/html" src="./js/comment.js"></script>
{{/if}}