<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening: {{format_time gallery.starting_date}}</h4>
  <h4>Closing: {{format_time gallery.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each gallery.book as |book|}}
    {{> book-details}}
    {{/each}}
  </section>
</section>
